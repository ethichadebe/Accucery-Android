<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_green">


        <RelativeLayout
            android:id="@+id/rlBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:behavior_hideable="false"
            app:behavior_peekHeight="@dimen/_1sdp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/white_gradient">

                <androidx.cardview.widget.CardView
                    style="@style/ShopCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="5dp">

                    <RelativeLayout
                        android:id="@+id/rlCard"
                        style="@style/ShopCardBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/primary_green">

                        <RelativeLayout
                            android:id="@+id/rlBack"
                            android:layout_width="?attr/actionBarSize"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_alignParentStart="true">

                            <androidx.cardview.widget.CardView
                                style="@style/ShopCard"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="5dp">

                                <ImageView
                                    android:id="@+id/ivBack"
                                    style="@style/ShopCardBackground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="@string/logo"
                                    android:onClick="back"
                                    android:padding="@dimen/_8sdp"
                                    android:src="@drawable/back_24" />
                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_toEndOf="@id/rlBack"
                            android:backgroundTint="@color/white"
                            android:fontFamily="@font/ubuntu_regular"
                            android:hint="@string/search_item"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:importantForAutofill="no" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lavLoading"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_centerInParent="true"
                    app:lottie_autoPlay="true"
                    android:visibility="gone"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/trolley_animation"
                    app:lottie_speed="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGroceryItemSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llHeader"
                tools:listitem="@layout/grocery_item_search" />

        </RelativeLayout>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>