<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BrittleMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!--Logo B-->
    <style name="TitleBarImage">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:src">@drawable/logo</item>
    </style>

    <!--"rittle" color next to B logo-->
    <style name="rittleColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000</item>
    </style>

    <!--Background color-->
    <style name="BackgroundColor" parent="TextAppearance.AppCompat">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <!--Shop Card outline shadow-->
    <style name="ShopCard" parent="TextAppearance.AppCompat">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/black</item>
    </style>

    <!--Clear list button-->
    <style name="clearList" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect_red</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">#FF2B2B</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--Shop Card Background-->
    <style name="ShopCardBackground" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <!--Red Card Background-->
    <style name="ShopCardBackgroundRed" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect_red</item>
    </style>

    <!--Red Card Background-->
    <style name="ShopCardBackgroundGreen" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect_green</item>
    </style>

    <!--Big text-->
    <style name="HeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!--Big text-->
    <style name="HeadingTextInverse" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!--Bold text-->
    <style name="BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <!--Bold text-->
    <style name="BoldTextInverse" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <!--Text-->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#424242</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <!--Text-->
    <style name="TextInverse" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <!--ShopItem-->
    <style name="ShopItem" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Item name -->
    <style name="ItemName">
        <item name="android:fontFamily">@font/fredoka</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <!-- Item quantity -->
    <style name="ItemQuantity">
        <item name="android:fontFamily">@font/fredoka</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <!-- Item price -->
    <style name="ItemPrice">
        <item name="android:fontFamily">@font/fredoka_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

</resources>