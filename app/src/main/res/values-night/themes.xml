<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Accucery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/primary_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!--Logo B-->
    <style name="TitleBarImage">
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:src">@drawable/logodark</item>
    </style>

    <!--"rittle" color next to B logo-->
    <style name="rittleColor" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#fff</item>
    </style>

    <!--Background color-->
    <style name="BackgroundColor" parent="TextAppearance.AppCompat">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <!--Shop Card outline shadow-->
    <style name="ShopCard" parent="TextAppearance.AppCompat">
        <item name="android:outlineSpotShadowColor" tools:targetApi="p">@color/white</item>
    </style>

    <!--Clear list button-->
    <style name="clearList" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect_red</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textColor">#FF2B2B</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--Big text-->
    <style name="HeadingText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <!--Bold text-->
    <style name="BoldText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_bold</item>
    </style>

    <!--Text-->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <!--Shop Card Background-->
    <style name="ShopCardBackground" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect_black</item>
    </style>


    <!--Shop Card Background-->
    <style name="ShopCardBackgroundRed" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect_red_dark</item>
    </style>

    <!--ShopItem-->
    <style name="ShopItem" parent="TextAppearance.AppCompat">
        <item name="android:background">@drawable/ripple_effect</item>
    </style>
</resources>